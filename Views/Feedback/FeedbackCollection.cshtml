@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body, html {
            height: 100%;
            margin: 0; /* Remove default margin */
        }

        body {
            background: none !important; /* Remove any inherited background */
        }

        .feedback-page {
            background: url('/images/background_image_with_man.png') no-repeat center center fixed !important;
            background-size: cover !important; /* Cover the entire space */
            height: 100vh; /* Set height to 100% of the viewport height */
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            flex-direction: column;
            text-align: center;
            font-family: "Avenir Next", "Avenir", sans-serif;
            width: 100vw; /* Ensure full width */
            overflow: hidden; /* Hide any overflow */
        }

        .feedback-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 40px 60px;
            width: 700px; /* Increase width */
            max-width: 90%; /* Ensure responsiveness */
            text-align: center;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            margin-bottom: 20px;
        }

            .header img {
                height: 40px;
            }

        .header-icons {
            display: flex;
            gap: 15px;
            align-items: center;
        }

            .header-icons i {
                font-size: 24px;
                cursor: pointer;
            }

        .search-bar {
            display: none;
            width: 200px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-left: 15px;
        }

            .search-bar.active {
                display: inline-block;
            }

        h1 {
            font-size: 32px; /* Increase font size */
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px; /* Increase font size */
            color: #666;
            margin-bottom: 30px;
        }

        .nps-scale {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

            .nps-scale button {
                background: #ffffff;
                border: 2px solid #cccccc;
                border-radius: 50%;
                width: 50px; /* Increase button size */
                height: 50px; /* Increase button size */
                cursor: pointer;
                font-size: 18px; /* Increase font size */
                transition: 0.2s;
            }

                .nps-scale button.selected {
                    background: #007bff;
                    border-color: #007bff;
                    color: #ffffff;
                }

        .feedback-textarea {
            width: 100%;
            margin-bottom: 20px;
            padding: 15px; /* Increase padding */
            border-radius: 10px;
            border: 2px solid #cccccc;
            resize: none;
            height: 120px; /* Increase height */
            font-size: 16px; /* Increase font size */
        }

        .feedback-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 20px; /* Increase margin */
        }

        .btn {
            background: #007bff;
            color: #ffffff;
            padding: 10px 20px; /* Increase padding */
            border: none;
            border-radius: 20px;
            cursor: pointer;
            transition: 0.2s;
        }

            .btn:hover {
                background: #0056b3;
            }

        .btn-skip {
            background: #f8f9fa;
            color: #333;
            border: 1px solid #cccccc;
            padding: 10px 20px; /* Increase padding */
            border-radius: 20px;
            cursor: pointer;
            transition: 0.2s;
        }

            .btn-skip:hover {
                background: #e2e6ea;
            }

        .btn-back {
            background: #f8f9fa;
            color: #333;
            border: 1px solid #cccccc;
            padding: 10px 20px; /* Increase padding */
            border-radius: 20px;
            cursor: pointer;
            transition: 0.2s;
        }

            .btn-back:hover {
                background: #e2e6ea;
            }

        .nps-descriptions {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            color: #666;
            font-size: 16px; /* Increase font size */
        }
    </style>
</head>
<body>
    <div class="feedback-page">
        <!-- Header -->
        <div class="header">
            <img src="/images/logo.png" alt="Nettly Logo" onclick="location.href='@Url.Action("Index", "Home")';">
            <div class="header-icons">
                <!-- Search Icon -->
                <i class="fas fa-search" onclick="toggleSearchBar();"></i>
                <!-- Search Bar -->
                <input type="text" class="search-bar" id="searchBar" placeholder="Search...">
                <!-- Home Icon -->
                <i class="fas fa-home" onclick="location.href='@Url.Action("Index", "Home")';"></i>
                <!-- Settings Icon -->
                <i class="fas fa-cog" onclick="location.href='@Url.Action("Settings", "Home")';"></i>
            </div>
        </div>

        <!-- Feedback Container -->
        <div class="feedback-container">
            <button class="btn-back" onclick="window.history.back()">Go Back</button>
            <h1>Your Opinion Matters</h1>
            <p>
                We are always looking for ways to improve your experience.<br>
                Please take a moment to evaluate and tell us what you think.
            </p>

            <!-- NPS Scale -->
            <div class="nps-scale">
                @for (int i = 1; i <= 10; i++)
                {
                    <button type="button" class="nps-button" data-value="@i">@i</button>
                }
            </div>

            <!-- NPS Descriptions -->
            <div class="nps-descriptions">
                <span>Bad</span>
                <span>Good</span>
                <span>Awesome</span>
            </div>

            <!-- Feedback Text Area -->
            <textarea class="feedback-textarea" placeholder="What can we do to improve your experience?"></textarea>

            <!-- Feedback Buttons -->
            <div class="feedback-buttons">
                <button class="btn btn-submit">Submit</button>
                <button class="btn btn-skip" onclick="location.href='@Url.Action("Feedback", "Feedback")'">Skip</button>
            </div>
        </div>
    </div>

    <script>
        // NPS Button Selection Logic
        document.querySelectorAll('.nps-button').forEach(button => {
            button.addEventListener('click', function () {
                document.querySelectorAll('.nps-button').forEach(btn => btn.classList.remove('selected'));
                this.classList.add('selected');
            });
        });

        // Toggle Search Bar
        function toggleSearchBar() {
            const searchBar = document.getElementById('searchBar');
            if (searchBar.classList.contains('active')) {
                searchBar.classList.remove('active');
                searchBar.style.display = 'none';
            } else {
                searchBar.classList.add('active');
                searchBar.style.display = 'inline-block';
                searchBar.focus();
            }
        }
    </script>
</body>
</html>
